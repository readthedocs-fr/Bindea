<idea-plugin>
    <id>fr.readthedocs.bindea</id>
    <name>Bindea</name>
    <vendor email="opensource@readthedocs.fr" url="https://readthedocs.fr">readthedocs-fr</vendor>

    <description><![CDATA[
    This extension allow you to upload some piece of code (or a complete file)
    on rtd-bin.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="Bindea.UploadAction" text="Bindea">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="fr.readthedocs.bindea.UploadAction" class="fr.readthedocs.bindea.UploadAction" text="Upload Code" description="Upload a piece of code on the rtd-bin">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
            </action>
            <action id="fr.readthedocs.bindea.OpenStorageAction" class="fr.readthedocs.bindea.OpenStorageAction" text="Open Storage"
                    description="Open the storage window ">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
            </action>
        </group>
    </actions>
</idea-plugin>
